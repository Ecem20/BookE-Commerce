@model CartsDto

@if (!string.IsNullOrEmpty(TempData["success"] as string))
{
    <div id="errorAlert" class="alert alert-danger" role="alert">
        @TempData["success"]
    </div>
}


@if (Model.CartHead != null && Model.CartDetail?.Count() > 0)
{
    <form method="post" asp-action="EmailCart">
        <br />
        <input asp-for="CartHead.UserId" hidden />
        <input asp-for="CartHead.CartHeadId" hidden />

        <div class="card border mt-4 container">
            <div class="card-header bg-dark text-light ml-0 row">
                <div class="col-md-6">
                    <h3 class="text-success"><i class="bi bi-cart"></i> &nbsp; Sepetim</h3>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-warning mt-2 btn-sm">Alışverişe Devam Et</a>
                </div>
            </div>

            <div class="card-body">
                <div class="d-none d-lg-block">
                    <div class="row text-info">
                        <div class="col-lg-6">Book Title</div>
                        <div class="col-lg-2">Price</div>
                        <div class="col-lg-2">Count</div>
                        <div class="col-lg-2"></div>
                    </div>
                </div>
                <hr />

                @foreach (var cartObj in Model.CartDetail)
                {
                    <div class="row h-100">
                        <div class="col-lg-6">
                            <h5>@cartObj.Product.ProductTitle</h5>
                        </div>

                        <div class="col-lg-2 pt-md-4" style="font-size: 11px;">
                            <span class="text-warning fs-5"><span class="border-bottom border-warning">@cartObj.Product.ProductPrice TL</span></span>
                        </div>

                        <div class="col-lg-2 pt-md-4" style="font-size: 11px;">
                            <span style="font-size: 17px;">@cartObj.Count</span>
                        </div>

                        <div class="col-lg-2 p-0 pt-lg-4 text-center">
                            <a asp-action="Remove" asp-route-cartDetailsId="@cartObj.CartDetailId" class="btn btn-sm btn-danger">
                                Remove
                            </a>
                        </div>
                    </div>
                }

                <hr />

                <div class="row text-info">
                    <div class="col-lg-6"></div>
                    <div class="col-lg-2"></div>
                    <div class="col-lg-2"></div>
                    <div class="col-lg-2"></div>
                </div>

                <div class="row">
                    <div class="col-6 text-end">
                        <span class="text-danger" style="font-size: 21px;">Order Total: @Model.CartHead.CartTotal.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                    </div>

                </div>
            </div>

            <div class="card-footer row">
                <div class="col-md-6">
                    <a asp-action="Checkout" class="btn btn-success form-control">Sipariş Ver</a>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div>
        <p>Please add items to cart.</p>
    </div>
}

@section Scripts {
    <script>
        setTimeout(function () {
            var errorAlert = document.getElementById('errorAlert');
            if (errorAlert) {
                errorAlert.remove();
            }
        }, 3000);
    </script>
}