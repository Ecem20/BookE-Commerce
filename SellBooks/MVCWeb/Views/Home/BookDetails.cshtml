@model ProductDto

<style>
    /* Resim boyutunu küçültmek için CSS */
    .kucuk-resim {
        max-width: 205px; /* Maksimum genişlik */
        max-height: 200px; /* Maksimum yükseklik */
    }
</style>

<form method="post" class="container mt-5">
    <input asp-for="ProductId" type="hidden" />
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-dark text-light">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="text-white">@Model.ProductTitle</h1>
                <span class="text-warning fs-5 border-bottom border-warning">@Model.ProductPrice TL</span>
            </div>
        </div>
        <div class="card-body">
            <div class="container p-2">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="row pl-3">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Author: @Model.BookAuthor</li>
                                <li class="list-group-item">Publisher: @Model.BookPublisher</li>
                                <li class="list-group-item">Category: @Model.Categories.CategoryName</li>
                                <li class="list-group-item">ISBN Number: @Model.ISBNNumber</li>
                                <li class="list-group-item">Stock: @Model.ProductStockQuantity</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="row mx-0 mb-3">
                            <input asp-for="Count" class="form-control" placeholder="Enter quantity" />
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>
                            <img src="@Model.ProductImageURL" class="card-img-top kucuk-resim" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-dark">
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-success flex-grow-1 me-2">Back to List</a>
                <button type="submit" class="btn btn-primary flex-grow-1">Add to Cart</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}