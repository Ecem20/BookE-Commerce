@model IEnumerable<ProductDto>
@using MVCWeb.Utility
<div class="container my-5">
    @if (!string.IsNullOrEmpty(TempData["success"] as string))
    {
        <div id="errorAlert" class="alert alert-danger" role="alert">
            @TempData["success"]
        </div>
    }

    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@book.ProductTitle</h5>
                        <img src="@book.ProductImageURL" class="card-img-top" />
                        <span class="text-warning fs-5"><span class="border-bottom border-warning">@book.ProductPrice TL</span></span>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <span class="badge bg-warning text-dark">Category: @book.Categories.CategoryName</span>
                            </li>
                            <li class="list-group-item">
                                <span class="badge bg-warning text-dark">Author: @book.BookAuthor</span>
                            </li>
                            <li class="list-group-item">
                                <span class="badge bg-warning text-dark">Stock: @book.ProductStockQuantity</span>
                            </li>
                        </ul>
                        @if (User.IsInRole(SD.RoleCustomer))
                        {
                            <div class="row">
                                <div class="col">
                                    <a asp-action="BookDetails" asp-route-bookId="@book.ProductId"
                                       class="btn btn-success form-control">Details</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Pagination -->
<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pageSize = ViewBag.PageSize, pageNumber = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>


@section Scripts {
    <script>
        setTimeout(function () {
            var errorAlert = document.getElementById('errorAlert');
            if (errorAlert) {
                errorAlert.remove();
            }
        }, 3000);
    </script>
}