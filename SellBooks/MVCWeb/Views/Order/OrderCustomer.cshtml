@*  her kullanıcının orderlarını görüceği sayfa
 *@

@model IEnumerable<MVCWeb.Models.OrderHeadDto>

<h2>Orders</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Order Total</th>
                <th>Address</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderHeadId</td>
                    <td>@order.OrderTotal TL</td>
                    <td>@order.Address</td>
                    <td>@order.Status</td>
                    <td>
                        <button class="btn btn-primary" onclick="showOrderDetails('@order.OrderHeadId')">Details</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}

<div id="orderDetailsModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="orderDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderDetailsModalLabel">Order Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="orderDetailsModalBody">
            </div>
        </div>
    </div>
</div>

<!-- Pagination -->
<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("OrderCustomer", new { pageSize = ViewBag.PageSize, pageNumber = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>



@section Scripts {
    <script>
        function showOrderDetails(orderId) {
            $.get('/Order/OrderDetailForUser', { orderId: orderId }, function (data) {
                $('#orderDetailsModalBody').html(data);
                $('#orderDetailsModal').modal('show');
            });
        }
    </script>
}
