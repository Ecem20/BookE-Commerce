@model ProductDto
<h1>Delete Book</h1>
<p>Are you sure you want to delete this book?</p>
<form asp-action="BookDelete" asp-controller="Book" method="post">

    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="ProductPrice" />
    <input type="hidden" asp-for="BookAuthor" />
    <input type="hidden" asp-for="ProductTitle" />
    <input type="hidden" asp-for="ProductStockQuantity" />
    <input type="hidden" asp-for="CategoryId" />
    <input type="hidden" asp-for="BookPublisher" />
    <input type="hidden" asp-for="ISBNNumber" />
    <input type="hidden" asp-for="ProductImageURL" />


    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="BookIndex" class="btn btn-secondary">Cancel</a>
    </div>
</form>